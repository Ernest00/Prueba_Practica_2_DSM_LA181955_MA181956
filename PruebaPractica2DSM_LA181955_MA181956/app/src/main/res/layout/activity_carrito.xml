<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_700"
    android:padding="15dp"
    android:backgroundTint="@color/pink_700"
    android:orientation="vertical"
    android:id="@+id/linearLayoutCarro">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lista_compra"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="@color/pink_200"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        />

    <ListView
        android:id="@+id/ListaCarrito"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:scrollbars="vertical"
        />

    <TextView
        android:id="@+id/tvTotalVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Total a pagar: $10.00"/>

    <Button
        android:id="@+id/btnPasoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/checkout"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        />
</LinearLayout>
