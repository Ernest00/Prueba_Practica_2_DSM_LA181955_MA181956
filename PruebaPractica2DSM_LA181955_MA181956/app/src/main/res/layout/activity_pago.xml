<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:text="@string/titulo_pago"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtNombrePago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/telefono_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtTelefonoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/correo_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtCorreoPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tarjeta_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtTarjetaPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vencimiento_tarjeta_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtVencimientoTarjetaPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_vencimiento_tarjeta"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cvv_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtCvvTarjetaPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direccion_pago"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/txtDireccionPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20sp"
       android:text="@string/btn_pago"/>
</LinearLayout>